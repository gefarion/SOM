ColumnarMessageMO = MessageMO (
    find: aSymbol since: aClass = (	
		| class | 
		aSymbol = #new ifTrue: [
			^(ColumnarClasses methods select: [:m | m signature = #newInstanceFor:]) at: 1
		].
		class := aClass.
		[class isNil or: (class hasMethod: aSymbol)] whileFalse: [
			class := class superclass.
		].
		class isNil ifFalse: [ ^(class methods select:[:m | m signature = aSymbol]) at: 1].
		^self error: 'Method ', aSymbol asString, 'not found since Class: ', aClass asString.  
	)
	
	activate: aMethod withArguments: arguments = (
		| extended |
		(aMethod signature = #newInstanceFor: and: [arguments length < 4]) ifTrue: [
			extended := Array new: arguments length + 1.
			1 to: arguments length - 1 do: [:i | extended at: i put: (arguments at: i)].
			extended at: arguments length put: ColumnarClasses current.
			extended at: arguments length + 1 put: self.
			extended at: 1 put: nil.
			extended at: 2 put: system baseExecutionLevel.
			^extended.
		].
		arguments at: 1 put: nil.
		arguments at: 2 put: system baseExecutionLevel.
		^arguments.
	)
)